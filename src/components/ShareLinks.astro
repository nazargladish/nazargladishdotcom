---
import { SHARE_LINKS } from "@/constants";
import LinkButton from "./LinkButton.astro";

const URL = Astro.url;
---

<div class="share-links">
  <span>Share this post on:</span>
  <div>
    {
      SHARE_LINKS.map(social => {
        return (
          <LinkButton href={`${social.href + URL}`} title={social.linkTitle}>
            <social.icon class="social-icon" />
            <span class="sr-only">{social.linkTitle}</span>
          </LinkButton>
        );
      })
    }
  </div>
</div>

<style>
  .share-links > div {
    display: flex;
    gap: 0.75rem;
    margin-top: 1rem;
  }
</style>
